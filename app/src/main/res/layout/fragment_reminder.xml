<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/editTextTitleReminder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:textColorHint="@color/DarkGray"
        android:textColor="@color/black"
        android:backgroundTint="@color/DarkGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/editTextDescriptionReminder"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:hint="Description"
        android:textColor="@color/black"
        android:textColorHint="@color/DarkGray"
        android:textAlignment="center"
        android:backgroundTint="@color/DarkGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/editTextTitleReminder"
        />

    <ImageButton
        android:id="@+id/imageButtonTimeReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_time"
        android:elevation="3dp"
        android:padding="10dp"
        android:background="@drawable/curved_background"
        android:backgroundTint="@color/DarkRed"
        app:layout_constraintTop_toBottomOf="@id/editTextDescriptionReminder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.2"
        />

    <TextView
        android:id="@+id/textViewTimeReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set your time"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/imageButtonTimeReminder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageButtonTimeReminder"
        app:layout_constraintBottom_toBottomOf="@id/imageButtonTimeReminder"
        app:layout_constraintHorizontal_bias="0.2"
        />

    <ImageButton
        android:id="@+id/imageButtonDateReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:src="@drawable/ic_date"
        android:padding="10dp"
        android:background="@drawable/curved_background"
        android:backgroundTint="@color/CornflowerBlue"
        app:layout_constraintTop_toBottomOf="@id/imageButtonTimeReminder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.2"
        />

    <TextView
        android:id="@+id/textViewDateReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set your date"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/imageButtonDateReminder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageButtonDateReminder"
        app:layout_constraintBottom_toBottomOf="@id/imageButtonDateReminder"
        app:layout_constraintHorizontal_bias="0.2"
        />

    <ImageButton
        android:id="@+id/imageButtonDoneReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:src="@drawable/ic_check"
        android:padding="20dp"
        android:background="@drawable/curved_background"
        android:backgroundTint="@color/Salmon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageButtonDateReminder"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>