<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewChecklistLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckLists"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.03"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/curved_background"
        android:backgroundTint="@color/DodgerBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewChecklistLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    <TextView
        android:id="@+id/textViewChecklistHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TODO Type"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />

    <CheckBox
        android:id="@+id/checkboxCheckList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/White"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewChecklistHeading"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        />

    <TextView
        android:id="@+id/textViewChecklistDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21st Dec, 2019"
        android:textColor="@color/White"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/textViewChecklistHeading"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintVertical_bias="0.3"
        />

    <TextView
        android:id="@+id/textViewChecklistTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:18 am"
        android:textColor="@color/White"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/textViewChecklistDate"
        app:layout_constraintEnd_toEndOf="@id/textViewChecklistDate"
        app:layout_constraintTop_toBottomOf="@id/textViewChecklistDate"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>